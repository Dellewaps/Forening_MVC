@model List<Calender>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col text-center">
                <h2 class="text-white py-2">Kalender liste</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Calender" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Lav Kalender opslag
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Kalender Overskrift 
                    </th>
                    <th>
                        Beskrivelse
                    </th>
                    <th>
                        Dato
                    </th>
                    <th>
                        Tema
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Date))
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td >
                            @Html.Raw(obj.Description)
                        </td>
                        <td>
                            @obj.Date
                        </td>
                        <td>
                            @obj.Category.Name
                        </td>
                        <td>
                            <div class="w-75 btn btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Calender" asp-action="Upsert" asp-route-id="@obj.Id" class=" btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i> Redigere
                                </a>
                                <a asp-area="Admin" asp-controller="Calender" asp-action="Delete" asp-route-id="@obj.Id" class=" btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Slet
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

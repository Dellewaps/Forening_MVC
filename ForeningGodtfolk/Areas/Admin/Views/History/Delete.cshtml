@model History

<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary py-3">
        <div class="row">
            <div class="col text-center">
                <h2 class="text-white py-2">Redigere Historie opslag</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 cpl-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 cpl-12">
                    <input type="date" asp-for="Date" disabled class="form-control border-0 shadow" />
                    <label asp-for="Date" class="ms-2"></label>
                </div>
                @* <div class="form-floating py-2 cpl-12">
                    <input asp-for="Theme" disabled class="form-control border-0 shadow" />
                    <label asp-for="Theme" class="ms-2"></label>
                </div> *@

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Opdatere</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="History" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Tilbage til listen
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 